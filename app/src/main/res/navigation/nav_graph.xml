<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment tools:layout="@layout/fragment_main"
        android:id="@+id/mainFragment"
        android:name="com.example.pokdex.Fragments.MainFragment"
        android:label="MainFragment"

        >
        <action
            android:id="@+id/action_mainFragment_to_displayPokemonFragment"
            app:destination="@id/displayPokemonFragment" >
            <argument app:argType="integer"
                android:name="id"/>
        </action>
    </fragment>
    <fragment
        tools:layout="@layout/fragment_display_pokemon"
        android:id="@+id/displayPokemonFragment"
        android:name="com.example.pokdex.Fragments.DisplayPokemonFragment"
        android:label="DisplayPokemonFragment" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
</navigation>